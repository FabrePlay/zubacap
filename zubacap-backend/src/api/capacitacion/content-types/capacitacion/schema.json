{
  "kind": "collectionType",
  "collectionName": "capacitacions",
  "info": {
    "singularName": "capacitacion",
    "pluralName": "capacitacions",
    "displayName": "Capacitacion"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "richtext"
    },
    "FechaInicio": {
      "type": "datetime",
      "required": true
    },
    "FechaFin": {
      "type": "datetime",
      "required": true
    },
    "imagenPortada": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "estado": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Borrador",
        "Publicado",
        "Archivado"
      ]
    },
    "visibilidadCalificaciones": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Solo_Instructor",
        "Instructor_y_Supervisor",
        "Todos"
      ]
    },
    "ofreceCertificado": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  }
}
